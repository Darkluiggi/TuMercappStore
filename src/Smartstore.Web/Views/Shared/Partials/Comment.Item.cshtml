@model CommentModel

<div class="row post-comment-item" role="listitem" aria-labelledby="comment-title-@Model.Id">
    <div class="col-auto comment-avatar-col">
        <partial name="Customer.Avatar" model="Model.Avatar" />
    </div>
    <div class="col comment-content-col">
        <div class="comment-content">
            <div class="comment-meta">
                @if (Model.AllowViewingProfiles)
                {
                    <a class="comment-user" asp-route="CustomerProfile" asp-route-id="@Model.CustomerId" rel="nofollow">
                        <span class="sr-only">@(T("Common.From"))&nbsp;</span>
                        <span>@Model.CustomerName</span>
                    </a>
                }
                else
                {
                    <span class="comment-user font-weight-medium">@(Model.CustomerName)</span>
                }
                <span class="px-2 text-muted">|</span>
                <time asp-for="@Model.CreatedOn" sm-humanize="true" class=" comment-time text-muted"></time>
            </div>
            <h5 id="comment-title-@Model.Id" sm-if="Model.CommentTitle.HasValue()" class="comment-title fs-h6 font-weight-bold mt-2" dir="auto">
                @Html.Raw(Model.CommentTitle)
            </h5>
            <p class="comment-body fs-h6 mt-3 mb-0" dir="auto">
                @Html.Raw(Smartstore.Utilities.Html.HtmlUtility.ConvertPlainTextToHtml(Model.CommentText))
            </p>
        </div>
    </div>
</div>
