@using Smartstore.Admin.Models.Common

@model CollectionGroupModel

@{
    var parentModel = ViewData["Parent"] as CollectionGroupListModel;
}

<datagrid id="collection-group-grid"
          allow-resize="true" 
          allow-row-selection="true"
          allow-edit="true" 
          allow-column-reordering="true"
          onrowclass="collectionGroupGrid_onRowClass">
    <datasource read="@Url.Action("CollectionGroupList", "CollectionGroup")"
                delete="@Url.Action("CollectionGroupDelete", "CollectionGroup")" />
    <sorting enabled="true">
        <sort by="DisplayOrder" />
    </sorting>
    <paging position="Bottom" show-size-chooser="true" />
    <toolbar>
        <toolbar-group>
            <button datagrid-action="DataGridToolAction.ToggleSearchPanel" class="btn btn-light btn-icon">
                <i class="fa fa-fw fa-filter"></i>
            </button>
        </toolbar-group>
        <toolbar-group>
            <a href="#" class="add-collection-group btn btn-primary btn-flat">
                <i class="fa fa-plus"></i>
                <span>@T("Admin.Common.AddNew")…</span>
            </a>
        </toolbar-group>
        <zone name="datagrid_toolbar_alpha"></zone>
        <toolbar-group class="omega"></toolbar-group>
        <zone name="datagrid_toolbar_omega"></zone>
        <toolbar-group>
            <button datagrid-action="DataGridToolAction.DeleteSelectedRows" type="button" class="btn btn-danger no-anims btn-flat">
                <i class="far fa-trash-can"></i>
                <span>@T("Admin.Common.Delete.Selected")</span>
            </button>
        </toolbar-group>
    </toolbar>
    <search-panel>
        <partial name="_Grid.CollectionGroups.Search" model="parentModel" />
    </search-panel>
    <columns>
        <column for="Id" halign="center" visible="false" type="string" />
        <column for="Name" width="2fr" hideable="false">
            <display-template>
                <div class="d-block">
                    <a href="#" class="collection-group-item text-truncate" :data-key="item.row.Id">
                        {{ item.value }}
                    </a>
                </div>
            </display-template>
        </column>
        <column for="EntityName">
            <display-template>
                <div class="text-truncate" :title="item.value">{{ item.row.LocalizedEntityName }}</div>
            </display-template>
        </column>
        <column for="EntityId" halign="center" type="string" />
        <column for="Published" halign="center" />
        <column for="DisplayOrder" halign="center" />
    </columns>
    <row-commands>
        <a datarow-action="DataRowAction.Custom" class="collection-group-item" :data-key="item.row.Id">@T("Common.Edit")</a>
        <a datarow-action="DataRowAction.Delete">@T("Common.Delete")</a>
    </row-commands>
</datagrid>

<script sm-target-zone="scripts" sm-minify="true" data-origin="collection-group-grid">
    function collectionGroupGrid_onRowClass(row) {
        return {
            "text-muted": !row.Published
        };
    }

    $(function () {
        $(document).on('click', '.add-collection-group', (e) => {
            e.preventDefault();
            openPopup('@Url.Action("CreateCollectionGroupPopup", "CollectionGroup")?btnId=btnRefresh&formId=collection-groups-form');
            return false;
        });

        $(document).on('click', '.collection-group-item', (e) => {
            e.preventDefault();
            const url = '@Url.Content("~/Admin/CollectionGroup/EditCollectionGroupPopup/")' + $(this).data('key') + '?btnId=btnRefresh&formId=collection-groups-form';
            openPopup(url);
            return true;
        });

        // Refresh grid after popup edit dialog was closed.
        $(document).on('click', '#btnRefresh', () => {
            window["collection-group-grid"].$children[0].read();
            return false;
        });
    });
</script>
